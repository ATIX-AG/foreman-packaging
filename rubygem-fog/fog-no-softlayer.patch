-class Softlayer < Fog::Bin
-  class << self
-    def class_for(key)
-      case key
-        when :compute
-          Fog::Compute::Softlayer
-        when :dns
-          Fog::DNS::Softlayer
-        when :network
-          Fog::Network::Softlayer
-        when :storage
-          Fog::Storage::Softlayer
-        else
